<p id="notice"><%= notice %></p>



<div class='sidebar' id="sidebar-left">
</div>
<div id="map">MAP HERE</div>
<div id="map-topbar"></div>
<div class='sidebar' id="sidebar-right">
  <table>
    <thead>
      <tr>
        <th>Index</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @gmaps.each do |gmap| %>
        <tr>
          <td><%= gmap.index %></td>
          <td><%= gmap.latitude %></td>
          <td><%= gmap.longitude %></td>
          <td><%= link_to 'Show', gmap %></td>
          <td><%= link_to 'Edit', edit_gmap_path(gmap) %></td>
          <td><%= link_to 'Destroy', gmap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Gmap', new_gmap_path %>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
